static void _prepare_string ( u8 *to, u8 *from )
{
	u16 i;

	for ( i = 0; from [ i ]; i++ )
	{
		to [ i ] = from [ i ];

		switch ( to [ i ] )
		{
			case 250:  to [ i ] = 32 -  1;  break; // �
			case 243:  to [ i ] = 32 -  2;  break; // �
			case 241:  to [ i ] = 32 -  3;  break; // �
